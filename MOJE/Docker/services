services:
    postgres:
        image: postgres
        environment:
        POSTGRES_USER:
        POSTGRES_PASSWORD:
        POSTGRES_DB:
    volumes:
        -postgres-db-volume:/var/lib/postgressql/data
    healthcheck:
        test:["CMD","pg_isready","-U","airflow"]
        interval: 5s
        retries: 5
    restart always
